# Tokyo Night Moon theme for zsh-syntax-highlighting

# Reset all styles
ZSH_HIGHLIGHT_STYLES[default]=none

# Base style
ZSH_HIGHLIGHT_STYLES[unknown-token]='fg=#c8d3f5'

# Commands and aliases
ZSH_HIGHLIGHT_STYLES[command]='fg=#82aaff'
ZSH_HIGHLIGHT_STYLES[alias]='fg=#82aaff'
ZSH_HIGHLIGHT_STYLES[suffix-alias]='fg=#82aaff'
ZSH_HIGHLIGHT_STYLES[global-alias]='fg=#82aaff'
ZSH_HIGHLIGHT_STYLES[builtin]='fg=#82aaff'
ZSH_HIGHLIGHT_STYLES[function]='fg=#82aaff'

# Paths
ZSH_HIGHLIGHT_STYLES[path]='fg=#c3e88d'

# Strings
ZSH_HIGHLIGHT_STYLES[single-quoted-argument]='fg=#c3e88d'
ZSH_HIGHLIGHT_STYLES[double-quoted-argument]='fg=#c3e88d'

# Variables
ZSH_HIGHLIGHT_STYLES[dollar-double-quoted-argument]='fg=#ff757f'
ZSH_HIGHLIGHT_STYLES[back-double-quoted-argument]='fg=#ff757f'
ZSH_HIGHLIGHT_STYLES[back-quoted-argument]='fg=#ff757f'

# Operators and punctuation
ZSH_HIGHLIGHT_STYLES[commandseparator]='fg=#c099ff'
ZSH_HIGHLIGHT_STYLES[redirection]='fg=#c099ff'

# Options and arguments
ZSH_HIGHLIGHT_STYLES[single-hyphen-option]='fg=#ffc777'
ZSH_HIGHLIGHT_STYLES[double-hyphen-option]='fg=#ffc777'

# Comments
ZSH_HIGHLIGHT_STYLES[comment]='fg=#636da6'

# Brackets and parentheses
ZSH_HIGHLIGHT_STYLES[bracket-level-1]='fg=#ff966c'
ZSH_HIGHLIGHT_STYLES[bracket-level-2]='fg=#82aaff'
ZSH_HIGHLIGHT_STYLES[bracket-level-3]='fg=#c099ff'
ZSH_HIGHLIGHT_STYLES[bracket-level-4]='fg=#4fd6be'

# Reserved words
ZSH_HIGHLIGHT_STYLES[reserved-word]='fg=#fca7ea'

# Globbing
ZSH_HIGHLIGHT_STYLES[globbing]='fg=#ff966c'

# Here-strings
ZSH_HIGHLIGHT_STYLES[dollar-quoted-argument]='fg=#c3e88d'

# Assign
ZSH_HIGHLIGHT_STYLES[assign]='fg=#c099ff'

# Named file descriptor
ZSH_HIGHLIGHT_STYLES[named-fd]='fg=#ffc777'

# Integers
ZSH_HIGHLIGHT_STYLES[numeric-fd]='fg=#ffc777'

# No color
ZSH_HIGHLIGHT_STYLES[precommand]='none'
ZSH_HIGHLIGHT_STYLES[autodirectory]='fg=#c3e88d,underline'
ZSH_HIGHLIGHT_STYLES[arg0]='fg=#c8d3f5'
